@model IEnumerable<Suburb>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Suburb List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Suburb" asp-action="Create" class="btn btn-primary">Add suburb</a>
        </div>
    </div>

    <table class="table" style="width:100%">
        <thead>
            <tr>
                <th>Suburb name</th>
                <th>Postal Code</th>
                <th>City Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var suburbValue in Model)
            {
                <tr>
                    <td width="50%">@suburbValue.SuburbName</td>
                
                    <td width="30%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Suburb" asp-action="Edit" asp-route-id="@suburbValue.SuburbId" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Suburb" asp-action="Delete" asp-route-id="@suburbValue.SuburbId" class="btn btn-primary mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>